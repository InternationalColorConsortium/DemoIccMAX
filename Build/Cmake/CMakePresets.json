      "configuration": "Debug"
    },
    {
      "name": "build-macos-ubsan",
      "configurePreset": "macos-xcode-ubsan",
      "configuration": "Debug"
    },
    {
      "name": "build-windows-asan",
      "configurePreset": "vs2022-x64-asan",
      "configuration": "Debug"
    },
    {
      "name": "build-windows-ubsan",
      "configurePreset": "vs2022-clangcl-x64-ubsan",
      "configuration": "Debug"
    }
  ],
  "testPresets": [
    {
      "name": "test-default",
      "configurePreset": "vs2022-x64"
    },
    {
      "name": "test-linux-asan",
      "configurePreset": "linux-clang-asan"
    },
    {
      "name": "test-linux-ubsan",
      "configurePreset": "linux-clang-ubsan"
    },
    {
      "name": "test-macos-asan",
      "configurePreset": "macos-xcode-asan"
    },
    {
      "name": "test-macos-ubsan",
      "configurePreset": "macos-xcode-ubsan"
    },
    {
      "name": "test-windows-asan",
      "configurePreset": "vs2022-x64-asan"
    },
    {
      "name": "test-windows-ubsan",
      "configurePreset": "vs2022-clangcl-x64-ubsan"
    }
  ]
}